<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">
    <ListPreference
        android:entries="@array/boilerModeListArray"
        android:entryValues="@array/boilerModeListArrayValues"
        android:key="t_boiler_mode"
        android:summary="Select thermostat mode"
        android:title="Mode" />>

    <PreferenceScreen android:title="Sensors">
        <PreferenceCategory
            android:key="Sensors"
            android:title="Sensors" />
    </PreferenceScreen>

    <PreferenceScreen android:title="Solar">
        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="8"
            android:key="CollectorSwitchOnTempDiff"
            android:summary="%s °"
            android:title="Collector Switch On Temp Diff" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="4"
            android:key="CollectorSwitchOffTempDiff"
            android:summary="%s °"
            android:title="Collector Switch Off Temp Diff" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="140"
            android:key="CollectorEmergencySwitchOffT"
            android:summary="%s °"
            android:title="EMOF - Emergency Collector Switch Off" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="120"
            android:key="CollectorEmergencySwitchOnT"
            android:summary="%s °"
            android:title="EMON - Emergency Collector Switch On" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="10"
            android:key="CollectorMinimumSwitchOnT"
            android:summary="%s °"
            android:title="CMN - Minimum temperature of collector" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="4"
            android:key="CollectorAntifreezeT"
            android:summary="%s °"
            android:title="CFR, Antifreeze function" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="60"
            android:key="MaxTankT"
            android:summary="%s °"
            android:title="SMX - Max Tank T" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="95"
            android:key="AbsoluteMaxTankT"
            android:summary="%s °"
            android:title="Absolute Max Tank T" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="55"
            android:key="PoolSwitchOnT"
            android:summary="%s °"
            android:title="Pool Switch On" />

        <ge.altasoft.gia.cha.views.FriendlyEditTextPreference
            android:defaultValue="50"
            android:key="PoolSwitchOffT"
            android:summary="%s °"
            android:title="Pool Switch Off" />
    </PreferenceScreen>

</PreferenceScreen>

