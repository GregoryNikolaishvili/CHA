<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:id="@+id/solarContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/boiler_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/tsControllerIsOnline"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:contentDescription="Is Online"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/circle_red" />


        <ToggleButton
            android:id="@+id/boilerMode"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/x_toggle_button"
            android:textOff="@string/off"
            android:textOn="@string/active" />

        <TextView
            android:id="@+id/boilerTimeTextView"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:padding="4dp"
            android:text="@string/sample_date" />
    </LinearLayout>
</LinearLayout>