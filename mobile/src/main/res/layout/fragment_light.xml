<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lightContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lightRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/lightControllerIsOnline"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/circle_red" />

        <ToggleButton
            android:id="@+id/lightsAutoMode"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/x_toggle_button"
            android:textOff="@string/manual"
            android:textOn="@string/auto" />

        <TextView
            android:id="@+id/lightsTimeTextView"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:padding="4dp"
            android:text="@string/sample_date" />
    </LinearLayout>
</LinearLayout>